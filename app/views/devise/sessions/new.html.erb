<div class="container">
<div class="row-fluid">
<div class="span6 offset3">
<div class="well">
<h2>Sign In</h2>
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.input :email, :autofocus => true %>
  <%= f.input :password %>
  <%= f.input :remember_me, :inline_label => 'Remember Me', :label => false, :as => :boolean if devise_mapping.rememberable? %>
  <%= f.button :submit, "Sign In", :class => 'btn-primary' %>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>